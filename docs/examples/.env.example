# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8000
MCP_AUTH_TOKEN=your-jwt-token-here

# Vector Database (Qdrant) Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
DEFAULT_COLLECTION=documents
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Graph Database (Neo4j) Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Web Intelligence (Crawl4AI) Configuration
CRAWL4AI_MAX_CONCURRENT=5
CRAWL4AI_REQUEST_TIMEOUT=30
CRAWL4AI_USER_AGENT=MCP-Examples/1.0
CRAWL4AI_ENABLE_STEALTH=true

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=development

# Performance Settings
CONNECTION_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1.0
ENABLE_CACHING=true
CACHE_TTL=3600

# Security Settings
JWT_SECRET_KEY=your-secret-key-here
JWT_EXPIRE_MINUTES=60
ENABLE_CORS=true
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Optional: External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Monitoring and Observability
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Optional: Message Queue (for advanced workflows)
REDIS_URL=redis://localhost:6379
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Optional: Cloud Provider Settings
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Example-specific settings
EXAMPLE_DATA_PATH=./sample_data
EXAMPLE_OUTPUT_PATH=./output
BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=5